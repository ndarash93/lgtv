<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="fontawesome/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="remote.css">
</head>

<body>
    <div class="remote_container">
        <div class="commandContainer">
            <div class="command">
                <button id="power" class="power" value="turnOn"><i class="fa-solid fa-power-off"></i></button>
                <button id="mute" class="mute"><i class="fa-solid fa-volume-xmark"></i></button>
                <div class="arrow_container">
                    <button id="left" class="left"><i class="fa-solid fa-chevron-left"></i></button>
                    <button id="right" class="right"><i class="fa-solid fa-chevron-right"></i></i></button>
                    <button id="up" class="up"><i class="fa-solid fa-chevron-up"></i></button>
                    <button id="down" class="down"><i class="fa-solid fa-chevron-down"></i></button>
                    <button id="select" class="select"><i class="fa-solid fa-check"></i></button>
                </div>
            </div>
        </div>
        <div class="chvolcontainer">
            <div class="channel">
                <button id="chup" class="chup" disabled="disabled"><i class="fa-solid fa-caret-up"></i></button>
                <button id="chdown" class="chdown" disabled="disabled"><i class="fa-solid fa-caret-down"></i></button>
            </div>
            <button id="back" class="back"><i class="fa-solid fa-undo" aria-hidden="true"></i></button>
            <button id="home" class="home"><i class="fa-solid fa-house"></i></button>
            <div class="vol">
                <button id="volumeUp" class="volup"><i class="fa-solid fa-volume-high"></i></button>
                <button id="volumeDown" class="voldown"><i class="fa-solid fa-volume-low"></i></button>
            </div>
        </div>
        <div class="serviceContainer">
            <button id="netflix" class="service netflix">Netflix</button>
            <button id="hulu" class="service hulu">Hulu</button>
            <button id="disney" class="service disney">Disney</button>
        </div>
    </div>
</body>
<script type="text/javascript" src="remote.js"></script>

</html>